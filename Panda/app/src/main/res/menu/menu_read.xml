            android:icon="@drawable/ic_re_seg"
            android:title="@string/re_seg"
            app:showAsAction="never" />

        <item
            android:id="@+id/action_copy_content"
            android:icon="@drawable/ic_copy"
            android:title="@string/menu_copy_content"
            app:showAsAction="never" />
        <item
